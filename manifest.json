{
  "manifest_version": 2,
  "name": "ScreamerExt",
  "version": "0.1",

  "author": "Pavel 'nxblnd' Egorov",
  "description": "Funny extension that screams if you spend too much time on selected web-sites",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts" : [
    {
      "js": ["screamer.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    "soundboard/antivirusPig.ogg",
    "soundboard/nuclearLaunch.ogg",
    "soundboard/alarmClock.ogg"
  ],

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "screamer-addon@example.com"
    }
  }
}